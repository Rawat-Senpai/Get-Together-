<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF192332"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FF192332"
       android:layout_marginLeft="-40dp"
        android:layout_marginRight="-80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:fontFamily="@font/adamina"
        android:letterSpacing="0.04"
        android:text="Enter your details\nFor Creating new Account "
        android:textColor="@color/white"
       android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/view2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/personName_logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_box"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="65dp"
        android:textColor="@color/white"
    android:textColorHint="#FFBFBFBF"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardView4" />


    <EditText
        android:id="@+id/email_logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your email"
        android:layout_marginTop="25dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
    android:textColorHint="#FFBFBFBF"
    android:background="@drawable/message_box"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/personName_logIn" />


    <EditText
        android:id="@+id/emailPassowrd_logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:background="@drawable/message_box"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"

    android:textColorHint="#FFBFBFBF"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/email_logIn" />


    <EditText
        android:id="@+id/password_confirm_logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:textColor="@color/white"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/message_box"
        app:layout_constraintEnd_toEndOf="parent"

    android:textColorHint="#FFBFBFBF"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/emailPassowrd_logIn" />


    <TextView
        android:id="@+id/log_to_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old User ??\nWant to Log In"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
    android:textColor="#FDFDFC"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_logIn" />




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"


    android:layout_width="240dp"
    android:layout_marginTop="20dp"
    android:layout_height="200dp"
    app:cardCornerRadius="30dp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view2">

    <ImageView
        android:id="@+id/select_photo_liveData"
    android:layout_width="match_parent"
        android:src="@drawable/ic_baseline_camera_alt_24"
    android:layout_height="match_parent"
    android:scaleType="fitCenter"
    android:background="#70323745"
    tools:layout_editor_absoluteX="105dp"
    tools:layout_editor_absoluteY="104dp" />

</androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:text="Add Photo "
        android:textSize="14sp"
        android:textColor="@color/white"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <Button
            android:id="@+id/button_logIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
        android:layout_marginTop="45dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:letterSpacing="0.1"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:backgroundTint="#2C3645"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_confirm_logIn" />

</androidx.constraintlayout.widget.ConstraintLayout>